<%- include('partials/header') %>
<div class="container">
	<h1>
		Sign up!
	</h1>
	<form action="/register" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="username" placeholder="username goes here..." required />
		</div>
		<div class="form-group">
			<input class="form-control" type="password" name="password" placeholder="password goes here..." required />
		</div>
		<div class="form-group">
			<input class="btn btn-primary" type="submit" value="Register" />
		</div>
	</form>
</div>

