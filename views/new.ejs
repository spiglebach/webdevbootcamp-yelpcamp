<%- include("partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			<h1 class="h2 my-5 text-center">
				Add a new campground
			</h1>
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" name="name" placeholder="name"/>
				</div>
				<div class="form-group">
					<input class="form-control" name="image" placeholder="image url"/>
				</div>
				<div class="form-group">
					<textarea class="d-block w-100" name="description" cols="40" rows="3" placeholder="description"></textarea>
				</div>
				
				<div class="form-group">
					<input class="btn btn-success btn-block" type="submit"/>
				</div>
			</form>
			<a class="mt-5" href="/campgrounds">Go back!</a>
		</div>
		
	</div>
</div>
<%- include("partials/footer") %>