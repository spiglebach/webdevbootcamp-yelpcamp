<%- include("partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			<h1 class="h2 my-5 text-center">
				Edit campground <%= camp.name %>
			</h1>
			<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" name="campground[name]" placeholder="name" value="<%= camp.name %>"/>
				</div>
				<div class="form-group">
					<input class="form-control" name="campground[image]" placeholder="image url" value="<%= camp.image %>"/>
				</div>
				<div class="form-group">
					<textarea class="d-block w-100" name="campground[description]" cols="40" rows="3" placeholder="description"><%= camp.description %></textarea>
				</div>
				
				<div class="form-group">
					<input class="btn btn-warning btn-block" type="submit" value="Edit"/>
				</div>
			</form>
			<a class="mt-5" href="/campgrounds/<%= camp._id %>">Go back!</a>
		</div>
		
	</div>
</div>
<%- include("partials/footer") %>