<%- include("partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			<h1 class="h2 my-5 text-center">
				Add a new comment to <%= camp.name %>
			</h1>
			<form action="/campgrounds/<%= camp._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" name="comment[text]" placeholder="comment text"/>
				</div>
				<div class="form-group">
					<input class="btn btn-success btn-block" type="submit" value="Send"/>
				</div>
			</form>
			<a class="mt-5" href="/campgrounds/<%= camp._id %>">Go back!</a>
		</div>
		
	</div>
</div>
<%- include("partials/footer") %>